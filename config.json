            "key": "chronological_previous_event_enabled",
            "name": "Detect previous event based on a date field (useful when the events are not necessarily arranged in a chronological order)",
            "type": "checkbox"
        },
        {
            "key": "chronological_previous_event_field",
            "name": "Date field",
            "type": "field-list",
